{
    "layer": "top",
    "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
    "modules-center": [],
    "modules-right": ["custom/btc", "custom/weather", "bluetooth", "pulseaudio", "cpu", "temperature#cpu", "custom/gpu-usage", "temperature#gpu", "memory", "network", "clock"],
    "sway/window": {
        "max-length": 50
    },
    "sway/workspaces": {
        "disable-scroll": true,
        "disable-click": true,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
            "1": "â˜°ä¹¾ç‚ºå¤©",
            "2": "â˜±å…Œç‚ºæ¾¤",
            "3": "â˜²é›¢ç‚ºç«",
            "4": "â˜³éœ‡ç‚ºé›·",
            "5": "â˜´å·½ç‚ºé¢¨",
            "6": "â˜µåç‚ºæ°´",
            "7": "â˜¶è‰®ç‚ºå±±",
            "8": "â˜·å¤ç‚ºåœ°"
        }
    },
    "clock": {
        "interval": 1,
        "format": "{:%H:%M:%S}",
        "format-alt": "{:%a %Y-%m-%d %H:%M:%S}"
    },
    "custom/weather": {
        "exec": "curl https://zh-tw.wttr.in/shanghai?format=%l:+%C+%t",
        "interval": 3600
    },
    "custom/btc": {
        "exec": "curl https://api.coinbase.com/v2/prices/spot?currency=USD | jq -r .data.amount",
        "interval": 360
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon} Bluetooth",
        "format-muted": "ğŸ”‡",
        "format-icons": {
            "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },
    "cpu": {
        "interval": 1,
        "format": "CPU: {load}%",
        "tooltip": false
    },
    "custom/gpu-usage": {
        "exec": "cat /sys/class/hwmon/hwmon5/device/gpu_busy_percent",
        "format": "GPU: {}%",
        "interval": 1
    },
    "temperature#gpu": {
        "hwmon-path": "/sys/class/hwmon/hwmon5/temp1_input",
        "format": "GPU: {temperatureC}Â°C",
        "tooltip": false
    },
    "temperature#cpu": {
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "format": "CPU: {temperatureC}Â°C",
        "tooltip": false
    },
    "network": {
        "interval": 5,
        "interface": "wlp4s0",
        "format": "{ifname}",
        "format-wifi": "{essid} ({signalStrength}%) {bandwidthDownBytes} â¬‡ï¸ {bandwidthUpBytes} â¬†ï¸",
        "format-ethernet": "{ipaddr}/{cidr} ethernet",
        "format-disconnected": "",
        "tooltip": false
    },
    "memory": {
        "interval": 5,
        "format": "{used:0.1f}/{total:0.1f}G"
    },
    "bluetooth": {
	      "format": "Bluetooth {status}",
	      "format-connected": "Connected: {device_alias}",
	      "format-connected-battery": "Connected: {device_alias} {device_battery_percentage}%",
        "tooltip": false
    }
}
